<h2>Notifications sample</h2>

<% if alert %><p style="background-color: red; color: white; padding: 10px"><%= alert %></p><% end %>

<hr>

<h3>SMS notifications</h3>
<% if @my_sms_pref.nil? or !@my_sms_pref.confirmed? %>
  <%= form_with(url: optin_notifications_path) do |f| %>
    <p>Do you want SMS notifications?</p>
    <%= f.label :my_phone, "Your phone number:" %> <%= f.text_field :my_phone %>
    <%= f.hidden_field :provider, value: "SMS" %>
    <p>Notify me about:</p>
    <%= optin_type_checkboxes %><br>
    <%= f.submit %>
  <% end %>
<% elsif @my_sms_pref.confirmed? %>
  <%= form_with(url: change_optin_notification_path(@my_sms_pref)) do |f| %>
    <p>You have activated SMS notifications to your phone number <%= @my_sms_pref.provided_id %> for the following:</p>
    <%= optin_type_checkboxes(@my_sms_pref.optin_type) %><br>
    <%= f.submit 'Change' %> | <%= link_to "Deactivate", optout_notifications_path(provider: 'SMS'), method: :post %>
  <% end %>
<% end %>

<hr>

